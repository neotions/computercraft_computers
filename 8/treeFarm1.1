-- Single Tree Charcoal Farming Script (NeoTions 2020)
 
 
function up()
    for b = 0,6 do
        if turtle.detectUp() then
            turtle.digUp()
            turtle.up()
        else
            turtle.up()
        end
    end
end
 
 
function down()
    for b = 0,6 do
        if turtle.detectDown() then
            turtle.digDown()
            turtle.down()
        else
            turtle.down()
        end
    end
end
 
 
 

 
 
-- actual program
 
while true do
    
    turtle.select(1)
    turtle.place()
    
    
    if turtle.compare() == true then

        os.sleep(1)
        print('not grown')
    else    
        up()
        if turtle.detect() then
            turtle.dig()
            turtle.forward()
        else
            turtle.forward()
        end    
        down()
        turtle.back()
    end
end
